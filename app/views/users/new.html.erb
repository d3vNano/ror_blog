<h1>Cadastro de Usuário</h1>

<%= form_tag users_path, method: :post do %>
  <%= label_tag :username, "Nome de Usuário" %>
  <%= text_field_tag :username, '', class: 'form-control' %>
  <br>

  <%= label_tag :email, "Email" %>
  <%= email_field_tag :email, '', class: 'form-control' %>
  <br>

  <%= label_tag :password, "Senha" %>
  <%= password_field_tag :password, '', class: 'form-control' %>
  <br>

  <%= submit_tag "Cadastrar", class: 'btn btn-primary' %>
<% end %>
